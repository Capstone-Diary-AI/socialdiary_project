<!-- activity_find_password.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login">

    <!-- Toolbar 추가 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/find_password_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/navigationBarColor"
        android:title="비밀번호 찾기"
        android:titleTextColor="@color/appColorTextPrimaryLight"
        app:navigationIcon="@drawable/ic_back" />

    <!-- 중앙에 정렬된 내용 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 여기에 비밀번호 찾기 UI 요소 추가 -->
        <EditText
            android:id="@+id/find_password_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="가입 시 사용한 이메일"
            android:inputType="textEmailAddress"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/find_password_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"
            android:layout_marginTop="24dp"/>

    </LinearLayout>
</LinearLayout>
