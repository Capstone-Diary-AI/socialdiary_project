<!-- values/colors.xml -->
<resources>
    <!-- 기본 색상 -->
    <color name="appColorPrimary">#FF9800</color> <!-- 로고 색상에 맞춘 기본 색상 -->
    <color name="appColorPrimaryVariant">#FF5722</color>
    <color name="colorAccent">#03DAC5</color>

    <!-- 라이트 모드 배경 및 텍스트 색상 -->
    <color name="appColorBackgroundLight">#FAF3E0</color> <!-- 밝은 배경 -->
    <color name="appColorTextPrimaryLight">#000000</color> <!-- 어두운 텍스트 -->
    <!-- 라이트 모드 네비게이션 바 배경 색상 -->
    <color name="navigationBarColor">#FFFFFF</color>

    <!-- 다크 모드에서 사용되는 색상을 기본 모드에 임시로 추가 -->
    <color name="appColorBackgroundDark">#FFFFFF</color> <!-- 기본 모드에 임시 밝은 색상 설정 -->
    <color name="appColorTextPrimaryDark">#000000</color> <!-- 기본 모드에 임시 어두운 색상 설정 -->

    <!-- 공통 색상 -->
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
    <color name="darker_gray">#333333</color>
    <color name="appColorBright">#FFFFFF</color> <!-- 밝은 색 텍스트/아이콘용 -->
    <color name="appColorDim">#BBBBBB</color> <!-- 덜 강조된 텍스트/아이콘용 -->
</resources>
